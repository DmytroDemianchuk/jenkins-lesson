pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = "dimadem/kuber:0.1"
    }
    stages {
        stage('Build Docker Image') {
            when {
               branch 'main'
            }
            steps {
                script {
                    app = docker.build(DOCKER_IMAGE_NAME)
                     app.inside {
                            sh 'echo Hello, World!'
                     }
                }
            }
        }
    }    
}
